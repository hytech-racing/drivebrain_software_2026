{
  "name": "Drivebrain dev container",
  "dockerComposeFile": [
    "${localWorkspaceFolder}/docker-compose.yml"
  ],
  "service": "dev",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "ms-python.python",
        "jeff-hykin.better-cpp-syntax",
        "llvm-vs-code-extensions.vscode-clangd"
      ]
    }
  },

  "remoteUser": "root"
}
